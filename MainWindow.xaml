<Window x:Class="CandlesSignal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CandlesSignal"
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        
        mc:Ignorable="d"
        Title="Юный барабанщик" Height="450" Width="800" FontFamily="Calibri" Icon="i.jpg" WindowStartupLocation="CenterScreen" Background="#FF908888">
    <DataGrid Name="TickersTable" HorizontalAlignment="Left" Height="203" Margin="10,49,0,0" VerticalAlignment="Top" Width="364" Background="#FF969494" BorderBrush="#FF3979B7" RowBackground="#FF908888" AutoGenerateColumns="False" SelectedIndex="0">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Инструмент" Binding="{Binding Path=Name}" Width="80" />
            <DataGridTextColumn Header="Верхняя граница" Binding="{Binding Path=Supply}" Width="110" />
            <DataGridTextColumn Header="Нижняя граница" Binding="{Binding Path=Demand}" Width="110" />
            <DataGridCheckBoxColumn Header="Пиинбар" Binding="{Binding Path=Pinbar}" Width="60" />
        </DataGrid.Columns>
    </DataGrid>
</Window>
